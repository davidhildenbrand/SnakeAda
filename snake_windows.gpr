with "gtkada";

project Snake_Windows is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Compiler is
      for Switches ("ada") use ("-gnatyy", "-gnatwa.n", "-gnatf", "-gnato", "-gnata", "-gnatVa", "-gnatyM160");
   end Compiler;

   package Linker is
      for Switches ("ada") use ("-Wl,--subsystem,windows");
   end Linker;

end Snake_Windows;

